
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <label>帳號</label>
        <input type="text" name="id" class="form-control" required />
    </div>
    <div class="form-group">
        <label>密碼</label>
        <input type="text" name="password" class="form-control" required />
    </div>
    <div>
        <input type="submit" value="登入" class="btn btn-primary" />
    </div>
    <p class="text-danger">
        @ViewBag.Error
    </p>
}